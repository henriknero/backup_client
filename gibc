#!/usr/bin/env python3
#coding=utf-8
"""
    docstring here
"""
import os
import tkinter
import logging
import backup_client
from backup_client import login, MainWindow
from backup_client.filehandler.pickles import load_obj


def main():
    try:
        gitgogs = backup_client.network.GitGogs(load_obj("udata"))
        verified = True
    except FileNotFoundError:
        logindialog = login.LoginWindow(0)
        credentials = logindialog.credentials
        verified = logindialog.verified
        gitgogs = backup_client.network.GitGogs(credentials)

    if verified:
        backend = backup_client.Backend(gitgogs=gitgogs) 
        top = MainWindow.MainWindow(0)
        top.setGitGogs(backend)
        top.MainLoop()


if __name__ == "__main__":
    loglevel = int(os.getenv('LOG_LEVEL', str(logging.WARNING)))
    logging.basicConfig(level=loglevel)
    main()
